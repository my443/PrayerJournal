<Window x:Class="PrayerJournal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrayerJournal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto">
            </RowDefinition>
        </Grid.RowDefinitions>
        <TabControl x:Name="tabControl" Grid.Column="0" Grid.RowSpan="2">
            <TabItem Header="Current">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="listBox" d:ItemsSource="{d:SampleData ItemCount=5}" Width="801"/>
                </Grid>
            </TabItem>
            <TabItem Header="History">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <GridSplitter Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="16" Width="5" Grid.RowSpan="2"/>

        <TextBox x:Name="textBox" AcceptsReturn="True" AcceptsTab="True" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalAlignment="Stretch" Width="Auto" Grid.Row="0" Grid.Column="2"/>
        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Label>Is A Historical Item</Label>
                <CheckBox VerticalAlignment="Center"></CheckBox>
            </StackPanel>
            <Label >Date Created</Label>
            <DatePicker HorizontalAlignment="Right"/>
        </StackPanel>

    </Grid>
</Window>
